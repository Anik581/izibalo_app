<header class="navbar" role="navigation">
	<div>
		<%= link_to "izibalo", login_path, id: "logo" %>

		<div id="login">
			<% if Rails.env.development? %>
				<% if logged? %>
					<%= ">>#{current_user.name}<<" %>
				<% else %>
					<%= ">>0<<" %>
				<% end %>
			<% end %>
		</div>

		<div class="nav btn-group">
			<% if logged? %>
				<%= link_to "log out", logout_path, class: "btn btn-success btn-lg", method: :delete %>
				<%= link_to "my stats", user_path(current_user), class: "btn btn-success btn-lg" %>
				<%= link_to "create task", new_task_path, class: "btn btn-success btn-lg" %>
				<%= link_to "edit profile", edit_user_path(current_user), class: "btn btn-success btn-lg" %>
				<%= link_to "delete account", user_path(current_user), class: "btn btn-success btn-lg", method: :delete %>
			<% else %>
			  <% if content_for(:title).include?("Create")  %>
			 		<%= link_to "Login", login_path, class: "btn btn-success btn-lg" %>
			 	<% else %>
			 		<%= link_to "Create account", new_user_path, class: "btn btn-lg btn-success" %>
			 	<% end %>
			<% end %>
		</div>

	</div>
</header>